<% provide(:title, "New Day") %>
<h1>It's a new day!</h1>

<%= form_for(@day) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form_field">
    Location: <%= @location %>
    <%= f.hidden_field :location, value: @location %>
    <%= f.hidden_field :date, value: @date %>
  </div>

  <div class="form_field">
    <label for="day_employees">Who's working today?</label>
    <% @employees.each do |employee| %>
      <div class="checkbox">
        <%= check_box_tag('employees[]', employee, nil, {multiple: true, id: employee, value: employee }) %>
        <label for="<%= employee %>"> <%= employee %> </label>
      </div>
    <% end %>
  </div>


  <div class="form_field">
    <label for="day_cash_start">Starting cash:</label>
    <%= f.number_field :cash_start, value: number_to_currency(f.object.cash_start.to_f, delimiter: '', unit: ''), step: 0.01 %>
  </div>

  <div class="form_field">

    <%= f.number_field :small_start %>
    <label for="day_small_start">Starting small cups:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'small') : '' %>) &nbsp; </span>
  </div>

  <div class="form_field">
    <label for="day_large_start">Starting large cups:</label>
    <%= f.number_field :large_start %>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'large') : '' %>) &nbsp; </span>
  </div>

  <div class="form_field">
    <%= f.number_field :bottle_start %>
    <label for="day_bottle_start">Starting water bottles:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'bottle') : ''  %>) &nbsp;   </span>
  </div>

  <div class="form_field">
    <%= f.number_field :hot_small_start %>
    <label for="day_hot_small_start">Starting small hot cups:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'hot_small') : '' %>) &nbsp;  </span>
  </div>

  <div class="form_field">
    <%= f.number_field :hot_medium_start %>
    <label for="day_hot_medium_start">Starting med. hot cups:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'hot_medium') : '' %>) &nbsp;</span>
  </div>

  <div class="form_field">
    <%= f.number_field :reusable_straw_start %>
    <label for="day_hot_medium_start">Starting reusable straws:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'reusable_straw') : '' %>) &nbsp;</span>
  </div>

  <div class="form_field">
    <%= f.number_field :reusable_straw_bag_start %>
    <label for="day_hot_medium_start">Starting reusable straws with bags:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'reusable_straw_bag') : '' %>) &nbsp;</span>
  </div>

  <div class="form_field">
    <%= f.number_field :donut_start %>
    <label for="day_hot_medium_start">Starting donuts:</label>
    <span class="float_left">(<%= @previous_day ? tommorrow_count(@previous_day, 'donut') : '' %>) &nbsp;</span>
  </div>



  <%= f.submit "Let's start selling" %>


<% end %>
